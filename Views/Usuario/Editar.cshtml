@using biblioteca.Models.Domain
@model Usuario

<div class="container-fluid">
    <div class="col-md-6 offset-md-3">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Editar usuario</strong></h1>
            </div>

            <div class="card-body">
                <form asp-action="Editar" method="post">
                    <input asp-for="PkUsuario" type="hidden" />

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" required />
                    </div>


                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Ingresa el usuario" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Ingresa la contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="FkRol">Rol:</label>
                        <select asp-for="FkRol" asp-items="ViewBag.Roles" class="form-control">
                            <option value="">Seleccione un rol</option>
                        </select>
                        <span asp-validation-for="FkRol" class="text-danger"></span>

                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-secondary d-block mx-auto">
                            <i class="bi bi-person-fill"></i> Guardar
                        </button>
                    </div>
                </form>

                <a asp-controller="Usuario" asp-action="Index" class="btn btn-outline-secondary mt-2">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
